<%= form_with model: grant do |form| %>
  <%= form.label :name, class: "h4 form-label" %>
  <%= form.text_field :name, class: "form-control" %>
  <%= form.label :roles, class: "h4 form-label" %>
    <%= form.collection_check_boxes :role_ids, Role.all, :id, :name do |check| %>
      <div class="form-check">
        <%= check.check_box class: "form-check-input" %>
        <%= check.label class: "form-check-label" %>
      </div>
    <% end %>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
